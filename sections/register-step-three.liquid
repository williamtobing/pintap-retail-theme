<div class="hidden" id="RegisterStepThree">
  <h1>Konfirmasi Kode Verifikasi</h1>
  <p v-if="typeOTP === 'sms'">Harap masukkan kode verifikasi yang kami kirim ke ${customerData.phone} melalui SMS</p>
  <p v-if="typeOTP === 'call'">Kami telah mengirimkan panggilan ke nomor ${customerData.phone}. Tidak perlu diangkat. Masukkan 6 digit terakhir dari panggilan tersebut.</p>

  <form
    @submit.prevent="handleRegisterConfirmOtp"
    autocomplete="off"
    class="input-otp">
    <input
      id="first"
      maxlength="1"
      onkeypress="restrictKey(event)"
      onkeyup="clickEvent(this,'second')"
      pattern="[0-9]"
      type="text"
      v-model="numOne">
    <input
      id="second"
      maxlength="1"
      onkeypress="restrictKey(event)"
      onkeyup="clickEvent(this,'third')"
      pattern="[0-9]"
      type="text"
      v-model="numTwo">
    <input
      id="third"
      maxlength="1"
      onkeypress="restrictKey(event)"
      onkeyup="clickEvent(this,'fourth')"
      pattern="[0-9]"
      type="text"
      v-model="numThree">
    <input
      id="fourth"
      maxlength="1"
      onkeypress="restrictKey(event)"
      onkeyup="clickEvent(this,'fifth')"
      pattern="[0-9]"
      type="text"
      v-model="numFour">
    <input
      id="fifth"
      maxlength="1"
      onkeypress="restrictKey(event)"
      onkeyup="clickEvent(this,'sixth')"
      pattern="[0-9]"
      type="text"
      v-model="numFive">
    <input
      id="sixth"
      maxlength="1"
      onkeypress="restrictKey(event)"
      pattern="[0-9]"
      type="text"
      v-model="numSix">

    <p class="success-text" v-if="successOTP">Verifikasi berhasil. Harap tunggu sebentar...</p>
    <p class="fail-text" v-if="failOTP">Verifikasi gagal. Pastikan kode yang dimasukkan benar.</p>

    <br>

    <button
      class="confirm-otp disabled"
      type="button"
      v-if="numOne === null || numTwo === null || numThree === null || numFour === null
        || numFive === null || numSix === null || numOne === '' || numTwo === '' ||
        numThree === '' || numFour === '' || numFive === '' || numSix === '' ||
        successOTP">Konfirmasi</button>
    <button
      class="confirm-otp"
      type="submit"
      v-if="numOne !== null && numTwo !== null && numThree !== null && numFour !== null
        && numFive !== null && numSix !== null && numOne !== '' && numTwo !== '' &&
        numThree !== '' && numFour !== '' && numFive !== '' && numSix !== '' &&
        !successOTP">Konfirmasi</button>
  </form>

  <form @submit.prevent="handleReqOtp('sms')" class="resend-form">
    <input class="hidden" type="text" v-model="phone" />
    <button :class="[successOTP ? 'disabled ' : '', 'resend-otp']" type="submit">Kirim ulang kode verifikasi</button>
  </form>
</div>