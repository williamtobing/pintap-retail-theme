  <h1>
    {{ 'customer.register.title' | t }}
  </h1>
  {%- form 'create_customer', novalidate: 'novalidate' -%}
    {%- if form.errors -%}
      <h2 autofocus class="form__message" tabindex="-1">
        <svg aria-hidden="true" focusable="false" role="presentation">
          <use href="#icon-error" />
        </svg>
        {{ 'templates.contact.form.error_heading' | t }}
      </h2>
      <ul>
        {%- for field in form.errors -%}
          <li>
            {%- if field == 'form' -%}
              {{ form.errors.messages[field] }}
            {%- else -%}
              <a href="#RegisterForm-{{ field }}">
                {{ form.errors.translated_fields[field] | capitalize }}
                {{ form.errors.messages[field] }}
              </a>
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}

    <div class="field">
      <input placeholder="Nama lengkap" type="text">
      <label>
        Nama lengkap
      </label>
    </div>

    <div class="field">
      <input placeholder="No HP" type="text">
      <label>
        No HP
      </label>
    </div>

    <div class="field">
      <input placeholder="Email (opsional)" type="text">
      <label>
        Email (opsional)
      </label>
    </div>

    <div class="field">
      <input placeholder="Tanggal Lahir" type="text">
      <label>
        Tanggal Lahir
      </label>
    </div>

    <div class="field">
      <select id="gender" name="gender">
        <option value="male">Jenis Kelamin</option>
        <option value="male">Laki-laki</option>
        <option value="female">Perempuan</option>
      </select>
    </div>

